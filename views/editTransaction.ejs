<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Expense Tracker App</title>
  </head>
  <body>
    <h1>Expense Tracker App</h1>
    <h3>Edit Transaction</h3>
    <form action="/transaction/<%= trans.id %>/edit" method="post">
      <label>Transaction Name</label><br />
      <input type="text" name="name" value="<%= trans.name %>" /><br /><br />
      <label>Date</label><br />
      <input
        type="date"
        name="date"
        value="<%= trans.date.toLocaleDateString('af-ZA') %>"
      /><br /><br />
      <label>Amount</label><br />
      <input
        type="number"
        name="amount"
        value="<%= trans.amount %>"
      /><br /><br />
      <label>Tags </label><br /><br />
      <select name="TagId" multiple>
        <% tag.forEach(el => { %>
        <option value="<%= el.id %>"><%= el.tag_name %></option>
        <% }) %></select
      ><br />
      <label>(Hold ctrl to select multiple tags)</label><br /><br />
      <br /><br />
      <input type="submit" value="Edit Transaction" />
    </form>
  </body>
</html>

<%- include('./partials/header') %>

<div class="container col-md-6">
  <div class="row">
    <div class="container col-md-6 mx-auto align-midle mt-5">
      <h3 class="text-center">Login</h3>
    </div>
  </div>
  <div class="row">
    <div class="container col-md-6 mx-auto" >
      <form action="/user/login" method="POST">
        <div class="form-row">
          <div class="form-group col">
            <input type="email" name="email" id="inputEmail4" class="form-control" placeholder="email@example.com">
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col">
            <input type="password" name="password" class="form-control" placeholder="secret password">
          </div>
        </div>
        <div class="form-group">
          <button type="submit" value="Login" class="btn btn-primary btn-md btn-block">Login</button>
        </div>
      </form>
    </div>
  </div>
  <div class="container">
    <img src="https://ibb.co/dp6R3sj" alt="">
  </div>
  <div class="container col-md-6 mx-auto align-midle">
    <p class="text-center">Don`t have an account?</p>
    <p class="text-center"><a href="/user/register">register</a></p>
  </div>
</div>

<%- include('./partials/end')%>